version: '3.5'

services:

  etcd:
    container_name: milvus-etcd
    image: quay.io/coreos/etcd:latest
    command: etcd -listen-peer-urls=http://10.170.0:2380 -advertise-client-urls=http://10.170.0.4:2379 -listen-client-urls http://0.0.0.0:2379,http://0.0.0.0:4001 -initial-advertise-peer-urls=http://10.170.0.4:2380 --listen-metrics-urls=http://10.170.0.4:2381 --initial-cluster default=http://10.170.0.4:2380
    healthcheck:
      test: ["CMD", "wget", "-q", "--tries=1", "--spider", "http://localhost:2381/health"]
      interval: 30s
      timeout: 20s
      retries: 3
    ports:
      - 2379:2379
    network_mode: host